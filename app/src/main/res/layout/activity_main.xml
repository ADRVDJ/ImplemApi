<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#EEF8E3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".MainActivity">

      <ImageView
          android:id="@+id/image_view"
          android:layout_width="match_parent"
          android:layout_height="160dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginStart="22dp"
          android:layout_marginTop="29dp"
          android:src="@drawable/holidays" />

      <Button
          android:id="@+id/button_get_holidays"
          android:layout_width="184dp"
          android:layout_height="67dp"
          android:layout_below="@id/image_view"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="119dp"
          android:layout_marginTop="24dp"
          android:layout_marginEnd="124dp"
          android:backgroundTint="#86C142"
          android:text="Obtener Holidays" />

      <TextView
          android:id="@+id/text_view_holidays"
          android:layout_width="379dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/button_get_holidays"
          android:layout_marginTop="26dp"
          android:backgroundTint="#E7FAF8"
          android:textColor="@android:color/black"
          android:textSize="18sp" />

    </RelativeLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
